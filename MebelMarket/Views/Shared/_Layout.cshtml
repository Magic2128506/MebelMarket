@using MebelMarket.Infrastructure.Interfaces
@using MebelMarket.Infrastructure.Mapping
@inject IFurnitureData catalog;

<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" href="~/images/favicon.ico" type="image/png">
    <link rel="stylesheet" href="~/css/vendor/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/vendor/plaza-icon.css">
    <link rel="stylesheet" href="~/css/vendor/jquery-ui.min.css">
    <link rel="stylesheet" href="~/css/plugins/slick.css">
    <link rel="stylesheet" href="~/css/plugins/animate.min.css">
    <link rel="stylesheet" href="~/css/plugins/nice-select.css">
    <link rel="stylesheet" href="~/css/plugins/venobox.min.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>
    <header class="header-section d-lg-block d-none">
        <div class="header-top">
            <div class="container">
                <div class="row d-flex justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="header-top--left">
                            <span>Добро пожаловать в наш магазин!</span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="header-top--right">
                            <ul class="header-user-menu">
                                <li>
                                    @if (ViewBag.filter == null)
                                    {
                                        <a asp-controller="Furniture" asp-action="Categories">Мебель по категориям</a>
                                    }
                                    else if (ViewBag.filter == "forOffice")
                                    {
                                        <a asp-controller="Furniture" asp-action="Categories" asp-route-filter="@ViewBag.filter">Офисная мебель по категориям</a>
                                    }
                                    else if (ViewBag.filter == "forHome")
                                    {
                                        <a asp-controller="Furniture" asp-action="Categories" asp-route-filter="@ViewBag.filter">Мебель для дома по категориям</a>
                                    }
                                </li>
                                <li>
                                    <a asp-controller="Home" asp-action="Delivery">Доставка</a>
                                </li>
                                <li>
                                    <a asp-controller="Home" asp-action="Payment">Оплата</a>
                                </li>
                                <li>
                                    <a asp-controller="Home" asp-action="AboutUs">О Нас</a>
                                </li>
                                <li>
                                    <a asp-controller="Home" asp-action="Contacts">Контакты</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="header-center">
            <div class="container">
                <div class="row d-flex align-items-center">
                    <div class="col-3">

                        <div class="header-logo">
                            <a asp-controller="Home" asp-action="Index"><img src="~/images/logo/logo.png" alt="Мебель маркет"></a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="header-search">
                            <form asp-action="FindAny" method="post">
                                <div class="header-search-box default-search-style d-flex">
                                    <input class="default-search-style-input-box border-around border-right-none" type="search" name="Search" placeholder="Что Вы ищете?" required>
                                    <button class="default-search-style-input-btn" type="submit"><i class="icon-search"></i></button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-3 text-right">
                        <partial name="Partial/_SocialLinks" model="Model" />
                    </div>
                </div>
            </div>
        </div>
        <div class="header-bottom sticky-header">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="main-menu">
                            <nav>
                                <ul style="text-align: center;">
                                    <partial name="Partial/_Categories" model="@catalog.GetAllTypes().ToView()" />
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="mobile-header-section d-block d-lg-none">
        <div class="mobile-header-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <div class="mobile-header--left">
                            <a asp-controller="Home" asp-action="Index" class="mobile-logo-link"> 
                                <img src="~/images/logo/logo.png" alt="" class="mobile-logo-img">
                            </a>
                        </div>
                        <div class="mobile-header--right">
                            <a href="#mobile-menu-offcanvas" class="mobile-menu offcanvas-toggle">
                                <span class="mobile-menu-dash"></span>
                                <span class="mobile-menu-dash"></span>
                                <span class="mobile-menu-dash"></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="mobile-menu-offcanvas" class="offcanvas offcanvas-leftside offcanvas-mobile-menu-section">
        <div class="offcanvas-header text-right">
            <button class="offcanvas-close"><i class="fa fa-times"></i></button>
        </div>
        <div class="offcanvas-mobile-menu-wrapper">
            <div class="mobile-menu-top">
                <span>Добро пожаловать в МебельМаркет!</span>
            </div>
            <div class="mobile-menu-center">
                <form asp-action="FindAny" method="post">
                    <div class="header-search-box default-search-style d-flex">
                        <input class="default-search-style-input-box border-around border-right-none" type="search" name="search" placeholder="Что Вы ищете?" required>
                        <button class="default-search-style-input-btn" type="submit"><i class="icon-search"></i></button>
                    </div>
                </form>
                <div class="mobile-menu-customer-support">
                    <div class="mobile-menu-customer-support-icon">
                        <img src="~/images/icon/support-icon.png" alt="">
                    </div>
                    <div class="mobile-menu-customer-support-text">
                        <span>Контактный телефон</span>
                        <a class="mobile-menu-customer-support-text-phone" href="tel:(+7)9373216103">+7-937321-61-03</a>
                    </div>
                </div>
            </div>
            <div class="mobile-menu-bottom">
                <div class="offcanvas-menu">
                    <ul>
                        <li>
                            <a href="#"><span>Главная</span></a>
                            <ul class="mobile-sub-menu">
                                <li><a asp-controller="Furniture" asp-action="Grid" asp-route-id="0" asp-route-filter="forHome">Мебель для дома</a></li>
                                <li><a asp-controller="Furniture" asp-action="Grid" asp-route-id="0" asp-route-filter="forOffice">Офисная мебель</a></li>
                            </ul>
                        </li>
                        <partial name="Partial/_CategoriesMobile" model="@catalog.GetAllTypes().ToView()" />
                        <li><a asp-controller="Home" asp-action="Delivery">Доставка</a></li>
                        <li><a asp-controller="Home" asp-action="Payment">Оплата</a></li>
                        <li><a asp-controller="Home" asp-action="AboutUs">О нас</a></li>
                        <li><a asp-controller="Home" asp-action="Contacts">Контакты</a></li>
                    </ul>
                </div>
                <a class="mobile-menu-email icon-text-right" href="mailto:mebelmarket@mail.ru"><i class="fa fa-envelope-o"> mebelmarket@mail.ru</i></a>

                <br />


            </div>
        </div>
    </div>

    <div class="offcanvas-overlay"></div>

    @RenderBody()

    <footer class="footer-section section-top-gap-100" style="margin-top: 35px;">
        <div class="footer-top section-inner-bg">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="footer-widget footer-widget-contact">
                            <div class="footer-contact">
                                <div class="customer-support">
                                    <div class="customer-support-icon">
                                        <img src="~/images/icon/support-icon.png" alt="">
                                    </div>
                                    <div class="customer-support-text">
                                        <span>Контактный телефон</span>
                                        <a class="customer-support-text-phone" href="tel:(+7)9373216103">+7-937-321-61-03</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mobile-menu-customer-support">
                            <partial name="Partial/_SocialLinks" model="Model" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="footer-widget footer-widget-menu">
                            <h3 class="footer-widget-title"  style="margin-top: 10px; text-align: center;">Информация</h3>
                            <div class="footer-menu">
                                <ul class="footer-menu-nav">
                                    <li><a asp-controller="Home" asp-action="Delivery">Доставка</a></li>
                                    <li><a asp-controller="Home" asp-action="Payment">Оплата</a></li>
                                </ul>
                                <ul class="footer-menu-nav">
                                    <li><a asp-controller="Home" asp-action="AboutUs">О нас</a></li>
                                    <li><a asp-controller="Home" asp-action="Contacts">Контакты</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 col-md-6">
                        <div class="copyright-area">
                            <p class="copyright-area-text">Copyright © 2021 <a class="copyright-link" asp-controller="Home" asp-action="Index">МебельМаркет</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <button class="material-scrolltop" type="button"></button>

    <script src="~/js/vendor/modernizr-3.11.2.min.js"></script>
    <script src="~/js/vendor/jquery-3.5.1.min.js"></script>
    <script src="~/js/vendor/jquery-migrate-3.3.0.min.js"></script>
    <script src="~/js/vendor/bootstrap.bundle.min.js"></script>
    <script src="~/js/vendor/jquery-ui.min.js"></script>

    <script src="~/js/plugins/slick.min.js"></script>
    <script src="~/js/plugins/material-scrolltop.js"></script>
    <script src="~/js/plugins/jquery.nice-select.min.js"></script>
    <script src="~/js/plugins/jquery.zoom.min.js"></script>
    <script src="~/js/plugins/venobox.min.js"></script>

    <script src="~/js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>