@model IEnumerable<FurnitureViewModel>
@{
    ViewData["Title"] = "Каталог мебели - МебельМаркет";
}

<br />
<!-- ...:::: Start Shop Section:::... -->
<div class="shop-section">
    <div class="container">
        <div class="row flex-column-reverse flex-lg-row">
            <div class="col-lg-12">

                <partial name="Partial/_FurnituriesGrid" model="@Model" />

                <!-- Start Pagination -->
                <div class="page-pagination text-center">
                    <ul>
                        @{
                            if (ViewBag.usedFilter != null && ViewBag.usedCategory != null && ViewBag.usedPage != null && ViewBag.pagesCount != null)
                            {
                                if (ViewBag.usedFilter == "Grid")
                                {
                                    var usedPage = ViewBag.usedPage;

                                    if (usedPage > 1)
                                    {
                                        var beforePage = usedPage - 1;

                                        <li><a asp-controller="Furniture" asp-action="@ViewBag.usedFilter" asp-route-page="@beforePage">Предыдущая страница</a></li>
                                    }

                                    for (int i = usedPage; i < usedPage + ViewBag.pagesCount; i++)
                                    {
                                        if (i == usedPage)
                                        {
                                            <li><a class="active" asp-controller="Furniture" asp-action="@ViewBag.usedFilter" asp-route-page="@i">@i</a></li>
                                        }
                                        else
                                        {
                                            <li><a asp-controller="Furniture" asp-action="@ViewBag.usedFilter" asp-route-page="@i">@i</a></li>
                                        }
                                    }

                                    var nextPage = usedPage + 1;

                                    <li><a asp-controller="Furniture" asp-action="@ViewBag.usedFilter" asp-route-page="@nextPage">Следующая</a></li>
                                }
                                else
                                {
                                    var usedPage = ViewBag.usedPage;

                                    if (usedPage > 1)
                                    {
                                        var beforePage = usedPage - 1;

                                        <li><a asp-controller="Furniture" asp-action="@ViewBag.usedFilter" asp-route-page="@beforePage" asp-route-categoryId="@ViewBag.usedCategory">Предыдущая страница</a></li>
                                    }

                                    for (int i = usedPage; i < usedPage + ViewBag.pagesCount; i++)
                                    {
                                        if (i == usedPage)
                                        {
                                            <li><a class="active" asp-controller="Furniture" asp-action="@ViewBag.usedFilter" asp-route-page="@i" asp-route-categoryId="@ViewBag.usedCategory">@i</a></li>
                                        }
                                        else
                                        {
                                            <li><a asp-controller="Furniture" asp-action="@ViewBag.usedFilter" asp-route-page="@i" asp-route-categoryId="@ViewBag.usedCategory">@i</a></li>
                                        }
                                    }

                                    var nextPage = usedPage + 1;

                                    <li><a asp-controller="Furniture" asp-action="@ViewBag.usedFilter" asp-route-page="@nextPage" asp-route-categoryId="@ViewBag.usedCategory">Следующая</a></li>
                                }
                            }
                        }
                    </ul>
                </div> <!-- End Pagination -->

            </div> <!-- End Shop Product Sorting Section  -->
        </div>
    </div>
</div> <!-- ...:::: End Shop Section:::... -->

<partial name="Partial/_modalAddCary" model="@Model" />
